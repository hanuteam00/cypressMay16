{
  "nonGlobalStepDefinitions": true,
  "stepDefinitions": [
    "cypress/e2e/cucumber/tests/step_definitions/**/*.{ts,js}",
    "//** in the path will match any number of directory levels",
    "cypress/e2e/cucumber/tests/step_definitions/common/*.{ts,js}",
    "explicitly points to the common directory"
  ],
  "html": {
    "enabled": true,
    "output": "reports/html/cucumber-report.html"
  },
  "json": {
    "enabled": true,
    "output": "reports/json/cucumber-report.json"
  },
  "messages": {
    "enabled": true,
    "output": "reports/message/cucumber-messages.ndjson"
  },
  "pretty": {
    "enabled": true
  }
}
